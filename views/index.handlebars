<h1>Eat-Da-Burger</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burger-block eated=true}}
        {{/unless}}
    {{/each}}
</ul>

<ul style="float:right">
    {{#each burgers}}
        {{#if devoured}}
            {{> burger-block eated=false}}
        {{/if}}
    {{/each}}
</ul>

<form class="create-form">
    
    <div class="form-group">
        <label for="ca"></label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit!</button>
    <p>Enter a burger you want to eat. Click the "Submit" button</p>
</form>